extends layout

block content
	.container
		h1.row Image Creation
		.creation-container.row
			.canvas-container.seven.columns
				canvas#image-canvas.canvas
				canvas#filter-canvas.canvas
			aside.canvas-options.five.columns
				.row.twelve.columns
					h3.centered Options
				.row.twelve.columns
					label.five.columns(for="file") Image file:
					input.seven.columns#file(name="file" type='file' accept="image/*")
				.row.twelve.columns
					label.five.columns#size-label(for="size") Size:
					input.seven.columns.setting#size(name="size" type="range" disabled)
				.row.twelve.columns
					label.five.columns#opacity-label(for="opacity") Opacity:
					input.seven.columns.setting#opacity(name="opacity" type="range" disabled min="0" max="1" value="1" step="0.01")
				
				.row.twelve.columns
					h4.row.twelve.columns Filter
					.row.twelve.columns
						label.five.columns#filter-label(for="filter") Colour:
						input.five.columns.setting#filter(name="clear" type="color" disabled)
						input.two.columns.setting#clear(name="filter" type="button" value="Clear" disabled)
					.row.twelve.columns
						label.five.columns#filter-opacity-label(for="filter-opacity") Colour Opacity:
						input.seven.columns.setting#filter-opacity(name="filter-opacity" type="range" disabled min="0" max="1" value="0" step="0.01")
					.row.twelve.columns
						label.five.columns#num-gradient-label(for="num-gradient") Filter Gradient:
						input.seven.columns.setting#num-gradient(name="filter-gradient" type="range" disabled min="0" max="3" value="0" step="1")
					.row.twelve.columns#gradients
					.row.twelve.columns
						label.five.columns#gradient-type(for="gradient-type") Gradient Type:
						input(type="radio" name="gradient-type" value="Linear")
						| Linear
						input(type="radio" name="gradient-type" value="Radial")
						| Radial

				.row.twelve.columns
					input.twelve.columns.setting.button-primary#Upload(name="Upload" type="submit" value="Upload" disabled)
