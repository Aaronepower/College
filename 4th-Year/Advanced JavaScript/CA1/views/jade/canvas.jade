extends layout

block content
	.container
		h1.row Image Creation
		.creation-container.row
			.canvas-container.seven.columns
				canvas#image-canvas.canvas
				canvas#filter-canvas.canvas
			aside.canvas-options.five.columns
				.row.twelve.columns
					h3.centered Options
				.row.twelve.columns
					label.five.columns(for="file") Image file:
					input.seven.columns#file(name="file" type='file' accept="image/*")
				.row.twelve.columns
					label.five.columns#size-label(for="size") Size:
					input.seven.columns.setting#size(name="size" type="range" disabled)
				.row.twelve.columns
					label.five.columns#opacity-label(for="opacity") Opacity:
					input.seven.columns.setting#opacity(name="opacity" type="range" disabled min="0" max="1" value="1" step="0.01")
				.row.twelve.columns
					label.five.columns#filter-label(for="filter") Filter:
					input.five.columns.setting#filter(name="clear" type="color" disabled)
					input.two.columns.setting#clear(name="filter" type="button" value="Clear" disabled)
				.row.twelve.columns
					label.five.columns#filter-opacity-label(for="filter") Filter Opacity:
					input.seven.columns.setting#filter-opacity(name="filter" type="range" disabled min="0" max="1" value="0" step="0.01")
				.row.twelve.columns
					input.twelve.columns.setting.button-primary#Upload(name="Upload" type="submit" value="Upload" disabled)
